<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">
    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/backactivity"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/cancelPayment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@drawable/cancel_button"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/cardnotext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CARD NUMBER:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/sent_message"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/cardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Enter the card number"
        android:background="@drawable/edittext"
        android:padding="10dp"
        android:layout_below="@id/cardnotext"/>
    <LinearLayout
        android:id="@+id/date_and_cvv_layout"
        android:layout_below="@id/cardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/expiredatetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EXPIRE DATE:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/sent_message"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/expireDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="DATE"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_below="@id/cardnotext"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="5dp"
            >
            <TextView
                android:id="@+id/cvvtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CVV:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/sent_message"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:hint="CVV"
                android:background="@drawable/edittext"
                android:padding="10dp"
                android:layout_below="@id/cardnotext"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/proceedPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_and_cvv_layout"
        android:text="PROCEED PAYMENT"
        android:textStyle="bold"
        android:textSize="18sp"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>