<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/received_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentStart="true"
        app:cardElevation="6dp"
        android:padding="5dp"
        android:backgroundTint="@color/white">
        <TextView
            android:id="@+id/received_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="hi how are you"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/sent_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="30dp"
        app:cardElevation="6dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/formal">
        <TextView
            android:id="@+id/sent_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="hi how are you"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/receive_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="6dp"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/receive_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/squareprofile"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/sent_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="6dp"
        android:layout_alignParentEnd="true"
        >

        <ImageView
            android:id="@+id/sent_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/squareprofile"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/locationReceivedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="50dp"
        app:cardElevation="6dp"
        android:layout_alignParentStart="true"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/location_sharing"/>
            <TextView
                android:id="@+id/locationReceivedAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="location address"
                android:gravity="center"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/locationSentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="50dp"
        app:cardElevation="6dp"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:padding="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/location_sharing"/>
            <TextView
                android:id="@+id/locationSentAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="location address"
                android:gravity="center"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>