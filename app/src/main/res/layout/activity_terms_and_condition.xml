                android:layout_height="wrap_content"
                android:text="You are responsible for the accuracy and completeness of the information you provide on the App. You must not impersonate any person or entity or provide false information."/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Privacy Policy: "
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your privacy is important to us. Please review our Privacy Policy to understand how we collect, use, and disclose your personal information."/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Account Security: "
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The App is intended for personal, non-commercial use only. You may not use the App in any way that is unlawful or prohibited by these terms." />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. User Conduct:"
                android:textStyle="bold"
                android:layout_marginTop="16dp"/>

